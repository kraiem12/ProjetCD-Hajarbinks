# Mon serveur doutils : Ansible et Mongodb
[mongodb]
mongodb ansible_ssh_host=192.168.100.114

[all:vars]
# jindique a Ansible quel user utiliser comme user SSH par defaut
ansible_user = vagrant
ansible_password = vagrant

# jindique a Ansible de ne pas v√©rifier les cles des serverus
ansible_ssh_common_args='-o StrictHostKeyChecking=no'